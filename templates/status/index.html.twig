{% extends 'base.html.twig' %}

{% block title %}{{ "Egoerak" | trans }}{% endblock %}

{% block main_header_title %}{{ "Egoerak" | trans }}{% endblock %}

{% block main_header_toolbar %}
<div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group mr-2">
        <a href="{{ path('status_new') }}" class="btn btn-sm btn-secondary"><i class="fas fa-plus-square"></i> {{ "Berria" | trans }}</a>
    </div>
</div>
{% endblock %}

{% block body %}

    <div class="table-responsive">
        <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Id</th>
                <th>Egoera mota</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
        {% for status in statuses %}
            <tr>
                <td>{{ status.id }}</td>
                <td>{{ status.name }}</td>
                <td>
                    <a href="{{ path('status_edit', {'id': status.id}) }}"><i class="fas fa-edit"></i> {{ "Editatu" | trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{ "Ez da ezer topatu" | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

{% endblock %}
