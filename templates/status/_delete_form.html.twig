<form method="post" action="{{ path('status_delete', {'id': status.id}) }}" onsubmit="return confirm('Ziur zaude ezabatu nahi duzula?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ status.id) }}">
    <button id="formBtnRemove" class="btn">{{ "Ezabatu" | trans }}</button>
</form>
