{% extends 'base.html.twig' %}

{% block title %}{{ "Lanpostu motak" | trans }}{% endblock %}

{% block main_header_title %}{{ "Lanpostu motak" | trans }}{% endblock %}

{% block main_header_toolbar %}
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group mr-2">
            <a href="{{ path('type_new') }}" class="btn btn-sm btn-secondary"><i class="fas fa-plus-square"></i> {{ "Berria" | trans }}</a>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="table-responsive">

        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>Id</th>
                <th>{{ "Lanpostu motak" | trans }}</th>
                <th>{{ "Laburdura" | trans }}</th>
                <th>&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            {% for type in types %}
                <tr>
                    <td>{{ type.id }}</td>
                    <td>{{ type.name }}</td>
                    <td>{{ type.abbreviation }}</td>
                    <td>
                        <a href="{{ path('type_edit', {'id': type.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">{{ "Ez da ezer topatu" | trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
